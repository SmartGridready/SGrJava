<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
        <PatternLayout pattern="%-5level %c{1.} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>
    <Logger name="com.smartgridready.communicator" level="debug" additivity="false">
        <AppenderRef ref="Console" />
    </Logger>
  </Loggers>
</Configuration>
